<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/options_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pitlv.androidexamplesandtutorialsforbeginners.Menus.OptionsMenuActivity">

    <TextView
        android:id="@+id/options_menu_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dfb26b"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/learn_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ff22ff"
        android:text="Learn more about Overflow Menu" />

</RelativeLayout>
